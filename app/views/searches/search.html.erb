<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-hover table-inverse">
        <div class="search_top">
            <p>"<%= @word %>"の検索結果</p>
          </div>
        <% if @range == "投稿画像" %>
          <% @post_image.each do |post_image| %>
          <!--「投稿画像」を選択された場合-->
            <%= @range %>一覧<br />

            <%= link_to public_item_image_post_image_path(item_image_id: post_image.item_image_id,id: post_image.id) do %>
              <%= attachment_image_tag post_image, :image, :fill, 150,150 %>
              <p><%= post_image.title %></p>
              <%= post_image.user.nickname %>
            <% end %>
            <br />
          <% end %>
        <% elsif @range == "線画素材" %><!--線画素材が選択された場合-->
          <%= @range %>一覧<br />
          <% @item_image.each do |item_image| %>
            <%= link_to public_item_image_path(item_image.id) do %>
              <%= attachment_image_tag item_image, :image, :fill, 150,150 %><br />
              <%= item_image.item_title %>
            <% end %>
            <br />
          <% end %>
        <% else %><!--ユーザ検索-->
          <%= @range %>一覧<br />
          <% @user.each do |user| %>
            <%= link_to public_user_path(user.id) do %>
              <%= attachment_image_tag user, :profile_image, :size => "100x100", fallback: "no_image.jpg" %><br />
              <%= user.nickname %>
            <% end %>
            <br />
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>