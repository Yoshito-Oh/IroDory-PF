<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-title">
        <h2>線画素材一覧</h2>
        <%= link_to "新規素材登録", new_admin_item_image_path, class: 'btn btn-primary' %>
      </div>
      
      <% @item_images.each do |item_image| %>
        <div class="item-image-list" style="display:inline-block;">
          <div class="image-link">
            <%= link_to admin_item_image_path(item_image.id) do %>  
              <%= attachment_image_tag item_image, :image, height:150, width:150, fallback: "no_image.jpg" %>
            <% end %> 
          </div>
          <div class="text-link">
            <%= link_to admin_item_image_path(item_image.id) do %>  
               <p><%= item_image.item_title %></p>
               <p><%#= item_image.item_status %></p>
               <%= item_image.item_introduction %>
            <% end %>
          </div>
        </div>  
      <% end %>
    </div>
  </div>
</div>