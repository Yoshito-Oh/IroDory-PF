<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4>承認待機一覧</h4>
      <% @pending_images.each do |pending_image| %>
        <div class="pending_list" style="display:inline-block;">
          <%= link_to admin_apply_path(pending_image.id) do %>
            <%= attachment_image_tag pending_image, :image, width: '50%' %><br />
            <%= pending_image.title %> | 
            <%= pending_image.user.nickname %>
          <% end %>  
        </div>
      <% end %>
    </div>
  </div>
</div>
