<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 style="text-align:center">会員一覧</h2>
      <% @users.each do |user| %>
        <div class="user_profile" style="">
          <%= link_to admin_user_path(user.id) do %>
            <div class="user_image" style="display:inline-block">
              <%= attachment_image_tag user, :profile_image, size: "150x150", fallback: "no_image.jpg" %>
            </div>
            <div class="user_infomation" style="display:inline-block; padding-left:20px;">
              <%= user.nickname %>
              <br />
              <%= user.introduction %>
            </div>
            
          <% end %>  
        </div>
      <% end %>
    </div>
  </div>
</div>