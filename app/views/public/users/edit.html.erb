<%= form_with model: @user, url: public_user_path, local:true do |f| %>
<!--ヘッダーの変更-->
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <p>ユーザ編集画面</p>
      
      <div class="profile_image" style="text-align:center">
        <%#= f.attachment_field :profile_image %>
      </div>

    </div>
    <div class="col-lg-9">
      <table class="table">
        <thead>
          <tr class="table_head">ユーザ情報の編集</tr>
        </thead>
        <tbody>
          <tr>
            <td class="gn-light">ユーザ氏名</td>
            <td class="gn-light"><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td class="bg-light">ユーザニックネーム</td>
            <td class="bg-light"><%= f.text_field :nickname, class: "form-control-file nickname" %></td>
          </tr>
          <tr>
            <td class="gn-light">自己紹介</td>
            <td class="gn-light"><%= f.text_area :introduction, class: "form-control introduction" %></td>
          </tr>
          <tr>
            <td class="bg-light">投稿枚数</td>
            <td class="bg-light"><%#= current_user.post_image.count%></td>
          </tr>
          <tr>
            <td>使用している画材</td>
            <td><%#= f.text_field %></td>
          </tr>
        </tbody>
      </table>
      <%= f.submit "更新", class: 'btn btn-success'%>
    </div>
  </div>
</div>
<% end %>