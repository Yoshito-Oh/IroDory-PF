<div class="container">
  <div class="row">
    <div class="col-lg-3">
      
    </div>
    <div class="col-lg-9">
      <h2>フォローしているユーザ</h2>
      <% if @users.blank? %>
        <p>フォローしているユーザはいません</p>
      <% else%>
        <table width="75%">
          <thead>
            <tr>
              <th width="25%">image</th>
              <th width="50%">profile</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag(user, :profile_image, :size => "200x200", fallback: "no_image.jpg") %></td>
                <td>
                  <%= user.nickname %><br />
                  フォロー：<%= user.followings.count %><br />
                  フォロワー：<%= user.followers.count %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>