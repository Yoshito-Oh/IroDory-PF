<!--プロフィールのヘッダーを入れる場所-->
<div class="user_header" style="background-color:purple;">
  <%= attachment_image_tag(@user, :profile_header, width: '100%',height: '250px', fallback: "no_image.jpg") %>
</div>
<br />
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div class="profile_image" style="text-align:center">
        <%= attachment_image_tag(@user, :profile_image, :size => "200x200", fallback: "no_image.jpg") %>
        <br />
        <%= @user.nickname %>
        <br />
          <!--フォロー・フォロワー数-->
        <% if current_user.id == @user.id %>
          <div class="user_button">
            <%= link_to "編集", edit_public_user_path(current_user.id), class: "btn btn-outline-secondary w-75 rounded-pill" %><br />
          </div>
          <div class="user_button">
            <%= link_to "退会", edit_public_user_path(current_user.id), method: :destroy, class: "btn btn-outline-danger w-75 rounded-pill" %>
          </div>
          
        <% else %>
          <% if current_user.following?(@user.id) %>
            <%= link_to "フォロー解除", public_user_relationships_path(@user.id), class: 'btn btn-primary',method: :delete %>
          <% else %>
            <%= link_to "フォロー", public_user_relationships_path(@user.id), class: 'btn btn-outline-primary',method: :post %>
          <% end %>
        <% end %>  
      </div>
    </div>
    <div class="col-lg-9">
      <table class="table">
        <thead>
          <tr class="table_head">user infomation</tr>
        </thead>
        <tbody>
          <tr>
            <td class="bg-light">ユーザニックネーム</td>
            <td class="bg-light"><%= @user.nickname %></td>
          </tr>
          <tr>
            <td class="gn-light">自己紹介</td>
            <td class="gn-light"><%= @user.introduction %></td>
          </tr>
          <tr>
            <td class="bg-light">投稿枚数</td>
            <td class="bg-light"><%= @user.post_images.count%></td>
          </tr>
          <tr>
            <td>使用している画材</td>
            <td></td>
          </tr>
          <% if current_user.id == @user.id %>
          <tr>
            <td>性別</td>
            <td><%= @user.sex %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-12">
      <p style="text-align:center">-投稿一覧-</p>
      <% @post_images.each do |post_image| %>
        <div class="post_image_list" style="display:inline-block;text-align:center">
          <%= link_to public_item_image_post_image_path(post_image.id) do %>
            <%= attachment_image_tag post_image, :image, width: '75%' %><br />
            <%= post_image.title %>
          <% end %>
          <!--切り替えボタン。削除-->
          
        </div>
      <% end %>
    </div>
    <div class="col-lg-12">
      <% if current_user.id == @user.id %>
      <p style="text-align:center">-投稿待機一覧-</p>
        <% @pending_images.each do |pending_image| %>
        <div class="pending_list" style="display:inline-block;text-align:center">
          <%= link_to public_item_image_post_image_path(pending_image.id) do %>
            <%= attachment_image_tag pending_image, :image, width: '75%' %><br />
            <%= pending_image.title%>
          <% end %>
        </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-12">
      <p style="text-align:center">-最新ブックマーク-</p>
      <%# @favorite.each do |favorite| %>
        <div class="favorite_list" style="display:inline-block;">
          <%#= attachment_image_tag favorite,  :image, width: '20%' %>
          <%#= favorite.title %>
          
          <!--切替ボタン-->
        </div>
      <%# end %>
    </div>
  </div>
</div>