<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <!--プロフィールのヘッダーを入れる場所-->
      <p>profile_header</p>
    </div>
    <div class="col-lg-3">
      <div class="profile_image" style="text-align:center">
        <%= attachment_image_tag(current_user, :profile_image, :size => "200x200", fallback: "no_image.jpg") %>
      </div>
      <!--フォロー・フォロワー数-->
      <% if current_user.id == @user.id %>
        <div class="user_button">
          <%= link_to "編集", edit_public_user_path(current_user.id), class: "btn btn-secondary" %><br />
        </div>
        <div class="user_button">
          <%= link_to "退会", edit_public_user_path(current_user.id), method: :destroy, class: "btn btn-danger" %>
        </div>
        
      <%# else %>
        <%# if current_user.following?(user) %>
          <%#= link_to "フォロー中", user_relationships_path(user.id), class: "btn btn-info", method: :delete %>
        <%# else %>
          <%#= link_to "フォロー", user_relationships_path(user.id), class: "btn btn-info", method: :post %>
        <%# end %>
      <% end %>
    </div>
    <div class="col-lg-9">
      <table class="table table-bordered">
        <thead>
          <tr class="table_head">user infomation</tr>
        </thead>
        <tbody>
          <tr>
            <td class="bg-light">ユーザニックネーム</td>
            <td><%= current_user.nickname %></td>
          </tr>
          <tr>
            <td class="gn-light">introduction</td>
            <td><%= current_user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-lg-12">
      <p style="text-align:center">-投稿一覧-</p>
      <%# @post_images.each do |post_image| %>
        <div class="post_image_list" style="display:inline-block;">
          <%#= attachment_image_tag post_image, :image, :fill, 300, 300 %>
          <%#= post_image.title %>
          <p>表示/非表示</p>
          <!--切り替えボタン-->
        </div>
      <%# end %>
    </div>
  </div>
</div>