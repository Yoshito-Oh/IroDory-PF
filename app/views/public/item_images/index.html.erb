<h1>線画素材の一覧(新着)</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% @item_images.each do |item_image| %>
          <div class="post_image_link" style="display:inline-block">
            <div class="post_image_name_title", style="text-align:center">
              <%= link_to public_item_image_path(item_image.id) do %>
                <%= attachment_image_tag item_image, :image, height: "150", fallback: "no_image.jpg" %>
                <%= item_image.title %>
              <% end %>
              <%= link_to item_image.name user_path() %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>