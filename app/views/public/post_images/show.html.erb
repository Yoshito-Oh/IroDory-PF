<div class="container">
  <div class="row">
    <div class="col-lg-3" style="text-align:center">
      <!--この画像を投稿した人のプロフィール-->
      <%= attachment_image_tag(@post_image.user, :profile_image, :size => "200x200", fallback: "no_image.jpg") %>
      <%= @post_image.user.nickname %>
      <%= @post_image.user.introduction %>
      <br />
      
      <div class="this_user_list" style="margin-top:30px;">
        <p>-このユーザーのイラスト-</p>
        <% @post_images.each do |post_image| %>
          <div class="post_list" style="display:inline-block">
            <%= link_to public_item_image_post_image_path(post_image.id) do %>
              <%= attachment_image_tag post_image, :image, width: '80%' %><br />
              <%= post_image.title %><br />
            <% end %>
            <%#= link_to post_image.user.nickname public_user_path(user.id) %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-lg-9" style="background-color:white">
        <!--タイトルと説明文を表示-->
      <h3><%= @post_image.title %></h3>
      <p><%= @post_image.img_introduction %></p>
      <div class="tag_list" style="display:inline-block;">
        <%# @tags.each do |tag| %>
          <%#= link_to "#{tag.name}", post_images_path(tag: tag.name) %>
        <%# end %>
      </div>
      <div class="item_image" style="text-align:center">
        <!--タグで投稿絵と線画素材を切り替える-->
        <%= attachment_image_tag @post_image, :image, width: '80%', format: 'png' %>
        <p>投稿日時：<%= @post_image.created_at %></p>
        <%= attachment_image_tag @item_image, :image, width: '80%', format: 'png' %>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="this_item_image" style="text-align:center">
        <%= link_to "この線画を使用した作品一覧>>",  %>
      </div>
    </div>
  </div>
</div>