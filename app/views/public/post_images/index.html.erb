<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 style="text-align:center">新着塗りイラスト一覧</h1>
      <br />
      <div class="item-list">
        <% @post_images.each do |post_image| %>
          <div class="post_image_link" style="display:inline-block">
            <div class="post_image_name_title", style="text-align:center">
              <%= link_to public_item_image_post_image_path(item_image_id: post_image.item_image_id,id: post_image.id) do %>
                <%= attachment_image_tag post_image, :image, width: '200px', height: '200px', style: "object-fit:cover" %><br />
                <%= post_image.title %>
                <br />
              <% end %>
              <%= link_to public_user_path(post_image.id) do %>
                <%= attachment_image_tag post_image.user, :profile_image, :size => '40x40', fallback: "no_image.jpg" %>
                <%= post_image.user.nickname%>
              <% end %>
            </div>
          </div>
        <% end %>
        <%= paginate @post_images %>
      </div>
    </div>
  </div>
</div>