<% if user_signed_in? %>
  <% if @post_image.favorited_by?(current_user) %><!--すでにいいねしていた場合-->
    <p>
      <%= link_to @post_image.favorites.count, public_post_image_favorites_path(@post_image.id), method: :delete, remote: true, class: "fas fa-heart heart_red", style: "color:red" %>
    </p>
  <% else %><!--まだいいねしていない場合-->
    <p>
      <%= link_to @post_image.favorites.count, public_post_image_favorites_path(@post_image.id), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
    </p>
  <% end %>
<% end %>