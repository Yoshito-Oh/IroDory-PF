<table class="post_image_comment">
  <% @post_image.post_image_comments.each do |post_image_comment| %>
    <tr>
      <td>
        <%= link_to user_path(post_image_comment.user) do %>
          <%= attachment_image_tag(post_image_comment.user, :profile_image, :size => "100x100", fallback: "no_image.jpg") %>
          <%= post_image_comment.user.nickname %>
        <% end %>
      </td>
      <td>
        <!--コメントの表示-->
        <%= post_image_comment.comment %>
      </td>
    </tr>
    <tr>
      <% if post_image_comment.user == current_user %>
        <%= link_to 'ｺﾒﾝﾄ削除', public_post_image_comments_destroy_path(@post_image, post_image_comment), method: :delete, remote: true, class: 'btn btn-danger' %>
      <% end %>
    </tr>
  <% end %>
</table>