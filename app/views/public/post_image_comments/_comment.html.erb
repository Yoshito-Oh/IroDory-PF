<table class="post_image_comment">
  <% @post_image.post_image_comments.each do |post_image_comment| %>
    <tr>
      <td width="10%">
        <%= link_to public_user_path(post_image_comment.user) do %>
          <%= attachment_image_tag(post_image_comment.user, :profile_image, :size => "50x50", fallback: "no_image.jpg") %><br />
          <%= post_image_comment.user.nickname %>
        <% end %>
      </td>
      <td style="text-align: left" width="55%">
        <!--コメントの表示-->
        <%= post_image_comment.comment %>
      </td>
      <td width="15%">
        <% if post_image_comment.user == current_user %>
        <%= link_to 'ｺﾒﾝﾄ削除', public_post_image_post_image_comment_path(@post_image, post_image_comment), method: :delete, remote: true, class: 'btn btn-danger' %>
      <% end %>
      </td>
    </tr>
    
  <% end %>
</table>